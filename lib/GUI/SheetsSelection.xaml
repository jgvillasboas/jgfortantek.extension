<Window 
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SelectViewTemplate"
        mc:Ignorable="d"
        Title="Select Sheets" SizeToContent="Height" Width="500" WindowStartupLocation="CenterScreen" ResizeMode="CanResize" Background="LightGray">

    <StackPanel Margin="5">
        <Image  Source="https://tantek4d.com/wp-content/uploads/2021/02/Tantek-4D-Logo-White.png" Height="20" Margin="0, 0, 0, 0" HorizontalAlignment="Center"/>
        <TextBlock Text="Select Sheets:" Margin="5" FontWeight="Bold"/>

        <DockPanel Margin="5">
            <TextBlock Text="🔎 Search:" Margin="0, 0, 5, 0"/>
            <TextBox x:Name="search_box" TextChanged="SearchBox_TextChanged"/>
        </DockPanel>

        <ListBox x:Name="listbox" Height="200" Margin="5" SelectionChanged="SearchBox_TextChanged"></ListBox>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="5">
                <Button Content="Check All" Width="75" Height="25" Margin="0, 0, 25, 0" Click="CheckAllButton_Click" Background="White"/>
                <Button Content="Uncheck All" Width="75" Margin="0, 0, 25, 0" Click="UncheckAllButton_Click" Background="White"/>
                <Button Content="Toggle All" Width="75" Margin="0, 0, 0, 0" Click="ToggleAllButton_Click" Background="White"/>
        </StackPanel>
           
                <Button Content="Select Sheets" Width="100" Height="25"  Margin="0, 5, 0, 0" Click="OKButton_Click" Background="White" HorizontalAlignment="Center"/>        

    </StackPanel>

</Window>
