<Window 
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SelectViewTemplate"
        mc:Ignorable="d"
        Title="SelectViewTemplate_UI" SizeToContent="Height" Width="500" WindowStartupLocation="CenterScreen" ResizeMode="CanResize" Background="LightGray">

    <StackPanel Margin="5">
        <Image  Source="https://tantek4d.com/wp-content/uploads/2021/02/Tantek-4D-Logo-White.png" Height="20" Margin="0, 0, 0, 0" HorizontalAlignment="Center"/>
        <TextBlock Text="Select ViewTemplate:" Margin="5" FontWeight="Bold"/>
        
        <DockPanel Margin="5">
            <TextBlock Text="🔎 Search:" Margin="0, 0, 5, 0"/>
            <TextBox x:Name="search_box" TextChanged="SearchBox_TextChanged"/>
        </DockPanel>
        
        <ListBox x:Name="listbox" Height="200" Margin="5" SelectionChanged="ListBox_SelectionChanged" SelectionMode="Single"></ListBox>
        
        <DockPanel Margin="5">
            <Button Content="OK" Width="75" Margin="0, 0, 5, 0" Click="OKButton_Click" Background="White"/>
        </DockPanel>
        
    </StackPanel>
    
</Window>
