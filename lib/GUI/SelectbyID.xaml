<Window 
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SelectElementsbyID"
        mc:Ignorable="d"
        Title="Select Elements by ID" Height="150" Width="350">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Enter Element ID:" Margin="0,0,0,5"/>
            <TextBox x:Name="ElementIDTextBox" Width="200" Margin="0,0,0,10"/>
            <Button Name="OkButton" Content="Select Element" Width="100"/>
        </StackPanel>
    </Grid>
</Window>
