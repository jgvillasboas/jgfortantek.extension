<Window x:Class="Tantek4d_Base_UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tantek4d_Base_UI"
        mc:Ignorable="d"
        Title="Tanktek4D - WPF Sample Form" SizeToContent="Height" Width="320" Background="Gray" WindowStartupLocation="CenterScreen">

    <StackPanel Margin="10">
        <Image  Source="https://tantek4d.com/wp-content/uploads/2021/02/Tantek-4D-Logo-White.png" Height="20" Margin="0, 0, 0, 10"/>

        <Border Margin="0" BorderBrush="White" BorderThickness="1" CornerRadius="5" Padding="10">
            <StackPanel>
                <TextBlock Text="Welcome to Tantek4D Base Form" FontSize="16" FontWeight="Bold" Margin="0, 0, 0, 10" HorizontalAlignment="Center" Foreground="White"/>
                <TextBlock TextWrapping="Wrap" FontSize="10" Foreground="White">
                    <Run Text="This is the base example for creating WPF forms in PyRevit. Use This base form to build your awesome forms on top of it."/><LineBreak/><LineBreak/>
                    <Run FontWeight="Bold" Text="Happy Coding!"/><LineBreak/><LineBreak/>
                    <Run FontWeight="Bold" Text="Jose Villas Boas"/><LineBreak/>
                    <Run FontWeight="Bold" Text="BIM Engineer"/><LineBreak/>
                </TextBlock>
            </StackPanel>
        </Border>
        
        <Button Content="Close" Width="100" Height="20" Margin="5" HorizontalAlignment="Center" Click="CloseButton_Click"/>
        
    </StackPanel>
</Window>
